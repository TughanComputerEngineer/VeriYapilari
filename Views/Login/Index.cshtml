@{
    Layout = "~/Views/Login/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Veri Yapıları Spor Turnuvası</title>
</head>
<body>
    <div class="centered">
        <!-- Giriş Paneli -->
        <div class="panel" id="loginPanel">
            <div class="logo">
                <svg viewBox="0 0 24 24"><path d="M12 2C7 2 2 4 2 4v6c0 7.18 7.09 11.72 9.18 12.91.52.3 1.12.3 1.64 0C14.91 21.72 22 17.18 22 10V4s-5-2-10-2zm0 2c4.42 0 8 .99 8 2.01V10c0 5.52-5.06 9.36-8 11.01C7.06 19.36 2 15.52 2 10V4.01C2 2.99 7.58 4 12 4zm0 3a3 3 0 0 0-3 3c0 1.66 1.34 3 3 3s3-1.34 3-3a3 3 0 0 0-3-3zm0 2a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/></svg>
            </div>
            <h2>Giriş Yap</h2>
            <div class="error" id="loginError"></div>
            <div class="input-group">
                <label for="loginUsername">Kullanıcı Adı:</label>
                <input type="text" id="loginUsername" autocomplete="username">
            </div>
            <div class="input-group">
                <label for="loginPassword">Şifre:</label>
                <input type="password" id="loginPassword" autocomplete="current-password">
            </div>
            <button class="btn" onclick="login()">Giriş Yap</button>
            <button class="link-btn" onclick="showRegister()">Üye Ol</button>
        </div>
        <!-- Kayıt Paneli -->
        <div class="panel" id="registerPanel" style="display:none;">
            <div class="logo">
                <svg viewBox="0 0 24 24"><path d="M12 2C7 2 2 4 2 4v6c0 7.18 7.09 11.72 9.18 12.91.52.3 1.12.3 1.64 0C14.91 21.72 22 17.18 22 10V4s-5-2-10-2zm0 2c4.42 0 8 .99 8 2.01V10c0 5.52-5.06 9.36-8 11.01C7.06 19.36 2 15.52 2 10V4.01C2 2.99 7.58 4 12 4zm0 3a3 3 0 0 0-3 3c0 1.66 1.34 3 3 3s3-1.34 3-3a3 3 0 0 0-3-3zm0 2a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/></svg>
            </div>
            <h2>Kayıt Ol</h2>
            <div class="error" id="registerError"></div>
            <div class="input-group">
                <label for="registerUsername">Kullanıcı Adı:</label>
                <input type="text" id="registerUsername" autocomplete="username">
            </div>
            <div class="input-group">
                <label for="registerPassword">Şifre:</label>
                <input type="password" id="registerPassword" autocomplete="new-password">
            </div>
            <div class="input-group">
                <label for="registerPassword2">Şifre Tekrar:</label>
                <input type="password" id="registerPassword2" autocomplete="new-password">
            </div>
            <button class="btn" onclick="registerUser()">Kayıt Ol</button>
            <button class="link-btn" onclick="showLogin()">Girişe Dön</button>
        </div>
    </div>
</body>
</html>
