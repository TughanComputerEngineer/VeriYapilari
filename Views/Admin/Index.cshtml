@{
    Layout = "~/Views/Admin/_Layout.cshtml";
    ViewData["Title"] = "Admin Panel - Ana Sayfa";
}

<div class="admin-container">
    <div class="panel-header">
        <h1>Yönetim Paneli</h1>
    </div>
    <div class="panel-content">
        <div class="dashboard">
            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="card-info">
                    <h3>Takımlar</h3>
                    <p>@ViewBag.TeamCount takım</p>
                </div>
                <a href="/Admin/Panel" class="card-link">Yönet</a>
            </div>

            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-user"></i>
                </div>
                <div class="card-info">
                    <h3>Kullanıcılar</h3>
                    <p>@ViewBag.UserCount kullanıcı</p>
                </div>
                <a href="/Admin/Users" class="card-link">Yönet</a>
            </div>

            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-futbol"></i>
                </div>
                <div class="card-info">
                    <h3>Maçlar</h3>
                    <p>@ViewBag.MatchCount maç</p>
                </div>
                <a href="/Admin/AddMatch" class="card-link">Yönet</a>
            </div>
        </div>

        <div class="quick-actions">
            <h2>Hızlı İşlemler</h2>
            <div class="actions-grid">
                <a href="/Admin/Panel" class="action-card">
                    <i class="fas fa-plus"></i>
                    <span>Yeni Takım Ekle</span>
                </a>
                <a href="/Admin/Users" class="action-card">
                    <i class="fas fa-user-plus"></i>
                    <span>Kullanıcıları Yönet</span>
                </a>
                <a href="/" class="action-card">
                    <i class="fas fa-globe"></i>
                    <span>Siteyi Görüntüle</span>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .dashboard {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .dashboard-card {
        background-color: white;
        border-radius: var(--border-radius);
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        padding: 20px;
        display: flex;
        align-items: center;
        position: relative;
    }

    .card-icon {
        width: 60px;
        height: 60px;
        background-color: var(--secondary-color);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        margin-right: 15px;
    }

    .card-info h3 {
        margin: 0;
        font-size: 18px;
        font-weight: 500;
    }

    .card-info p {
        margin: 5px 0 0;
        color: var(--text-muted);
    }

    .card-link {
        position: absolute;
        top: 20px;
        right: 20px;
        color: var(--secondary-color);
        text-decoration: none;
        font-weight: 500;
    }

        .card-link:hover {
            text-decoration: underline;
        }

    .quick-actions h2 {
        font-size: 20px;
        font-weight: 500;
        margin-bottom: 15px;
    }

    .actions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 15px;
    }

    .action-card {
        background-color: white;
        border-radius: var(--border-radius);
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        padding: 20px;
        text-align: center;
        text-decoration: none;
        color: #334155;
        transition: var(--transition);
    }

        .action-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .action-card i {
            font-size: 30px;
            color: var(--secondary-color);
            margin-bottom: 10px;
            display: block;
        }
</style>
