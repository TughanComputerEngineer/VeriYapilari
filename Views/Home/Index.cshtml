@model List<webapplication.Models.Team>

@{
    ViewData["Title"] = "Futbol Turnuvası - Ana Sayfa";
}

<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"]</title>

  <!-- CSS Dosyasını Bağlama -->
  <link href="~/css/home.css" rel="stylesheet" />
</head>
<body>
  <div class="container">
    <div class="header">
      <div class="logo-title">
        <img src="~/images/logo.png" class="logo" />
        <h1>Veri Yapıları Spor Turnuvası Puan Sistemi</h1>
      </div>
      <div class="login-links">
        <div class="dropdown-item">Kullanıcı Girişi</div> |
        <div class="dropdown-item">Admin Girişi</div>
        <img src="~/images/login-1.png" class="login-icon" />
      </div>
    </div>

    <div class="main-content">
      <div class="left-panel">
        <div class="search-bar">
          <img src="~/images/search.png" class="search-icon" />
          <input type="text" placeholder="Bir Takım Ara..." />
          <div class="dropdown-wrapper">
            <button class="search-toggle">
              <img src="~/images/down-arrow.png" class="arrow-icon" />
            </button>
            <div class="dropdown-body" id="ligDropdown">
              <div class="dropdown-item">Dünya Kupası</div>
              <div class="dropdown-item">1. Lig</div>
              <div class="dropdown-item">2. Lig</div>
              <div class="dropdown-item">Amatör Ligi</div>
            </div>
          </div>
        </div>

        <div class="team-table">
          <div class="table-header">
            <span>Sıra</span>
            <span>Takım Adı</span>
            <span>Son 5 Maç</span>
            <span>Puan</span>
            <span></span>
          </div>
          <div id="takim-listesi"></div>

          <!-- Takımları Döngü ile Listele -->
          @foreach (var team in Model)
          {
              <div class="team-item">
                  <span>@team.Name</span>
                  <span>@team.CurrentScore</span>
              </div>
          }

        </div>
      </div>

      <div class="right-panel">
        <h2>Favoriler</h2>
        <p>Lütfen giriş yapınız...</p>
      </div>

      <div class="side-menu">
        <a href="index.html"><img src="~/images/teams.png" class="side-icon active" title="Ana Sayfa" /></a>
        <a href="ligler.html"><img src="~/images/lig.png" class="side-icon" title="Ligler" /></a>
        <a href="#"><img src="~/images/tournament-1.png" class="side-icon" title="Turnuva" /></a>
      </div>
    </div>
  </div>

  <!-- JavaScript Dosyasını Bağlama -->
  <script src="~/js/home.js"></script>
</body>
</html>

