@model webapplication.Models.LoginViewModel

@{
    ViewData["Title"] = "Giriş";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- CSS Dosyası -->
    <link href="~/css/home.css?v=@DateTime.Now.Ticks" rel="stylesheet" />
    <!-- Font Awesome icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        /* Animasyon tanımları */
        @@keyframes scaleIn {
            0% {
                transform: scale(0);
                opacity: 0;
            }

            70% {
                transform: scale(1.05);
                opacity: 0.7;
            }

            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        @@keyframes fadeIn {
            0% {
                opacity: 0;
            }

            100% {
                opacity: 1;
            }
        }

        body {
            background-color: var(--background-dark);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            padding: 0;
        }

        .login-container {
            width: 450px;
            background-color: var(--background-medium);
            border-radius: var(--border-radius);
            padding: 40px;
            box-shadow: var(--box-shadow);
            animation: scaleIn 0.7s cubic-bezier(0.34, 1.56, 0.64, 1);
            transform-origin: center center;
            position: relative;
        }

        .logo-container {
            text-align: center;
            margin-bottom: 30px;
            opacity: 0;
            animation: fadeIn 0.5s ease-out forwards;
            animation-delay: 0.7s;
        }

        .logo {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--secondary-color);
        }

        .form-content {
            visibility: hidden;
            opacity: 0;
            animation: fadeIn 0.5s ease-out forwards;
            animation-delay: 0.7s;
        }

        .login-container.animation-complete .form-content {
            visibility: visible;
        }

        .form-group {
            margin-bottom: 25px;
        }

            .form-group label {
                display: block;
                margin-bottom: 10px;
                font-weight: 500;
                color: var(--text-light);
            }

        .form-control {
            width: 100%;
            padding: 15px;
            border: none;
            border-radius: var(--border-radius);
            background-color: var(--background-light);
            color: var(--text-light);
            font-size: 16px;
            box-sizing: border-box;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                outline: none;
                box-shadow: 0 0 0 2px var(--accent-color);
                transform: translateY(-2px);
            }

        .btn-login {
            width: 100%;
            padding: 15px;
            background-color: var(--secondary-color);
            color: var(--primary-color);
            border: none;
            border-radius: var(--border-radius);
            font-weight: 700;
            font-size: 16px;
            cursor: pointer;
            transition: var(--transition);
            margin-top: 10px;
        }

            .btn-login:hover {
                background-color: var(--accent-color);
                transform: translateY(-2px);
            }

        .validation-summary-errors {
            color: var(--loss-color);
            margin-bottom: 20px;
        }

            .validation-summary-errors ul {
                list-style: none;
                padding-left: 0;
            }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 25px;
            color: var(--text-muted);
            text-decoration: none;
            transition: var(--transition);
        }

            .back-link:hover {
                color: var(--secondary-color);
            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="logo-container">
            <img src="~/images/logo.png" class="logo" alt="Logo" />
        </div>

        <div class="form-content">
            <form method="post" action="/Account/Login">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="validation-summary-errors"></div>

                <div class="form-group">
                    <label for="Username">Kullanıcı Adı</label>
                    <input type="text" id="Username" name="Username" class="form-control" placeholder="Kullanıcı adınızı giriniz" />
                </div>

                <div class="form-group">
                    <label for="Password">Şifre</label>
                    <input type="password" id="Password" name="Password" class="form-control" placeholder="Şifrenizi giriniz" />
                </div>

                <button type="submit" class="btn-login">Giriş Yap</button>
            </form>

            <a href="/" class="back-link">Ana Sayfaya Dön</a>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                document.querySelector('.login-container').classList.add('animation-complete');
            }, 700);
        });
    </script>
</body>
</html>
